
        document.querySelectorAll('.hover-element').forEach(function(element) {
            element.addEventListener('mouseenter', function() {
                // Menambahkan animasi untuk latar belakang
                this.querySelector('.background-hover').classList.add('bg-neutral-800','ease-in','duration-500');
                this.querySelector('.background-hover').classList.remove('bg-white');

                // Menambahkan animasi untuk gambar
                this.querySelector('.image-hover').classList.add('scale-110','ease-in','duration-500');
                this.querySelector('.image-hover').classList.remove('scale-100');

                // Menambahkan animasi untuk logo
                this.querySelector('.logo-hover').classList.add('fill-white','ease-in','duration-500');
                
            });

            element.addEventListener('mouseleave', function() {
                // Menghapus animasi untuk latar belakang
                this.querySelector('.background-hover').classList.add('bg-white','ease-in','duration-500');
                this.querySelector('.background-hover').classList.remove('bg-neutral-800');

                // Menghapus animasi untuk gambar
                this.querySelector('.image-hover').classList.add('scale-100','ease-in','duration-500');
                this.querySelector('.image-hover').classList.remove('scale-110');

                // Menghapus animasi untuk logo
                this.querySelector('.logo-hover').classList.remove('fill-white','ease-in','duration-500');
                
            });
        });
        document.querySelectorAll(".hover-animation").forEach(function(element) {
            element.addEventListener("mouseenter", function() {
                this.querySelector('.moving-animation').classList.add("movingText");
            });
        });


        document.querySelectorAll('.nextStep').forEach(function(element) {
            element.addEventListener('click', function() {
                // Menambahkan animasi untuk latar belakang
                this.querySelector('.step2').classList.add('hidden');
                this.querySelector('.step1').classList.remove('hidden');
            });
        });
        
        document.querySelectorAll('.backStep').forEach(function(element) {
            element.addEventListener('click', function() {
                // Menambahkan animasi untuk latar belakang
                this.querySelector('.step1').classList.add('hidden');
                this.querySelector('.step2').classList.remove('hidden');
            });
        });


        // bikin div baru
        const textField = document.createElement('div');
        textField.classList.add('added-field');

        container.insertBefore(textField, this);